{% extends 'base.html.twig' %}

{% block body %}

    {% include 'header.html.twig' %}

    <p>Willkommen bei DigiDates.de - Deinem API-Provider f√ºr Zeit- und Datumsberechnungen.</p>

    {% include 'buttonbar.html.twig' %}

    <div class="mt-6">
        <h2 class="is-size-3 mb-2">{{ data.header }}</h2>
        <p>{{ data.message }} <a class="ml-1 button is-small is-outlined is-rounded" href="{{ data.link }}" target="_blank" rel="noreferrer noopener">Mehr dazu</a></p>
    </div>


    <div class="columns my-5">
        <div class="column">
            <div class="field">
                <label class="label is-medium">Kalenderwoche (KW):</label>
                <div class="control">
                    <input class="input is-medium" type="text" id="week">
                </div>
            </div>
        </div>
        <div class="column">
            <div class="field">
                <label class="label is-medium">Datum:</label>
                <div class="control">
                    <input class="input is-medium" type="text" id="humantime">
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
<script>

    const callApi = async () => {
        const response = await fetch('https://digidates.de/api/v1/week');
        const json = await response.json();
        document.getElementById('week').value = json.week;

        const datum = new Date();
        const options = { year: 'numeric', month: 'long', day: 'numeric'};

        document.getElementById('humantime').value =
            datum.toLocaleDateString('de-DE', options);

    }


    callApi();

</script>

{% endblock %}